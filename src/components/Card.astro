---
import ContactMe, { ContactMeProps } from "./ContactMe.astro";
import CardLink, { CardLinkProps } from "./CardLink.astro";

export interface Props {
    links: CardLinkProps[];
    contactLinks: ContactMeProps[];
}

const { contactLinks, links } = Astro.props;
---

<div
    class="mt-3 w-full overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5 link-card"
>
    <div class="p-4">
        {links.map((l) => <CardLink {...l} />)}
    </div>
    <div class="grid grid-cols-2 divide-x divide-gray-900/5 bg-gray-50">
        {contactLinks.map((cl) => <ContactMe {...cl} />)}
    </div>
</div>

<style>
    .link-card {
        background-color: white;
        background-image: none;
        background-size: 400%;
        border-radius: 0.6rem;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -2px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(var(--accent), 25%);
    }
    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent));
    }
</style>
